    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "port": 9231,
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk=9231",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand",
                "--watch"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        }
    ]
}
